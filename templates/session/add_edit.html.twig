{% extends "base.html.twig" %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}
    <p><a href="{{ path('index') }}">Retour à la liste des sessions</a></p>

    {% if editMode %}
        <h1>Modification d'une session</h1>
    {% else %}
        <h1>Ajout d'une session</h1>
    {% endif %}

    {{ form_start(formSession) }}
        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.intitule) }}
            </div>
        </div>

        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.nbPlaces) }}
            </div>
        </div>

        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.dateDebut) }}
            </div>
        </div>

        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.dateFin) }}
            </div>
        </div>

        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.formation) }}
            </div>
        </div>

        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.lieu) }}
            </div>
        </div>

        <div class="w3-row">
            <div class="{{ quarter }}">
                {{ form_row(formSession.envoi) }}
            </div>
        </div>
    {{ form_end(formSession) }}

    <p><a href="{{ path('index') }}">Retour à la liste des sessions</a></p>
{% endblock %}
